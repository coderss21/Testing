FROM ubuntu:18.04
 
RUN apt-get update -y
RUN apt-get install git -y

ARG SNOWFLAKE_USERNAME
ENV SNOWFLAKE_USERNAME=$SNOWFLAKE_USERNAME
ARG SNOWFLAKE_PASSWORD
ENV SNOWFLAKE_PASSWORD=$SNOWFLAKE_PASSWORD
ARG SNOWFLAKE_ACCOUNT
ENV SNOWFLAKE_ACCOUNT=$SNOWFLAKE_ACCOUNT
ARG SNOWFLAKE_APPLICATION
ENV SNOWFLAKE_APPLICATION=$SNOWFLAKE_APPLICATION
ARG SNOWFLAKE_PORT
ENV SNOWFLAKE_PORT=$SNOWFLAKE_PORT
ARG SNOWFLAKE_DATABASE
ENV SNOWFLAKE_DATABASE=$SNOWFLAKE_DATABASE
ARG SNOWFLAKE_WAREHOUSE
ENV SNOWFLAKE_WAREHOUSE=$SNOWFLAKE_WAREHOUSE
ARG SNOWFLAKE_SCHEMA
ENV SNOWFLAKE_SCHEMA=$SNOWFLAKE_SCHEMA
ARG DATA_LAKE
ENV DATA_LAKE=$DATA_LAKE
ARG DATA_LAKE_TYPE
ENV DATA_LAKE_TYPE=$DATA_LAKE_TYPE
ARG DATA_LAKE_ROOT_PATH
ENV DATA_LAKE_ROOT_PATH=$DATA_LAKE_ROOT_PATH
ARG DATA_LAKE_REGION
ENV DATA_LAKE_REGION=$DATA_LAKE_REGION
ARG TENANT
ENV TENANT=$TENANT
ARG STAGE
ENV STAGE=$STAGE
ARG MLFLOW_TRACKING_URI
ENV MLFLOW_TRACKING_URI=$MLFLOW_TRACKING_URI
ARG MLFLOW_TRACKING_TOKEN
ENV MLFLOW_TRACKING_TOKEN=$MLFLOW_TRACKING_TOKEN